<!-- Business Contacts add, for the secure side of the site -->
<%- include ../partials/header.ejs %>

<%- include ../partials/navigation.ejs %>

    <!-- Content for the add page. add-business-contact -->
    <div class="content">
        <div class="container">
            <h1><%= title %></h1>
            <div class="row">
                <div class="col-md-offset-3 col-md-8">
                
                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Name</label>
                            <input type="text" class="form-control" id="nameTextField" placeholder="Name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="contactNumTextField">Contact Number</label>
                            <input type="text" class="form-control" id="contactNumTextField" placeholder="123456789" name="contactNumber" required>
                        </div>
                        <div class="form-group">
                            <label for="emailTextField">eMail Address</label>
                            <input type="text" class="form-control" id="emailTextField" placeholder="email@address" name="email" required>
                        </div>

                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i> Submit</button>

                        <a href="/business-contacts" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include ../partials/footer.ejs %>